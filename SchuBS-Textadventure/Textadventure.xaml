<Window x:Class="SchuBS_Textadventure.Textadventure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchuBS_Textadventure"
        xmlns:MyControls="clr-namespace:SchuBS_Textadventure.MyControls"
        mc:Ignorable="d"
        Title="Textadventure" Height="450" Width="600">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image x:Name="ImageHintergrund"
               Margin="-5,-5,-5,0"
               Stretch="Fill" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image x:Name="ImagePerson"
                   Grid.Column="1"
                   Grid.RowSpan="2" />

            <MyControls:SlowTextBox x:Name="TextBoxHauptText"
                                    Grid.Row="1"
                                    IsReadOnly="True"
                                    TextWrapping="Wrap"
                                    Foreground="White"
                                    FontSize="14">
                <MyControls:SlowTextBox.Background>
                    <SolidColorBrush Color="Blue" Opacity="0.7"/>
                </MyControls:SlowTextBox.Background>
            </MyControls:SlowTextBox>
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <TextBlock>Gesundheit:</TextBlock>
            <TextBlock x:Name="TextBlockGesundheit"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.66*"/>
                <ColumnDefinition Width="0.33*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid MyControls:MarginSetter.Margin="0,5,5,0">
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate DataType="x:String">
                                    <TextBlock TextWrapping="Wrap"
                                       Text="{Binding}" />
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button x:Name="Button1"
                        Click="Button1_Click">Button 1</Button>
                <Button x:Name="Button2"
                        Grid.Column="1"
                        Click="Button2_Click">Button 2</Button>
                <Button x:Name="Button3"
                        Grid.Column="2"
                        Click="Button3_Click">Button 3</Button>
            </Grid>

            <Grid Grid.Row="1"
                        Margin="0,5,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32*" />
                    <ColumnDefinition Width="18*"/>
                    <ColumnDefinition Width="117*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TextBoxEingabe"
                         Margin="0,0,5,0" TextChanged="TextBoxEingabe_TextChanged" Grid.ColumnSpan="3"/>
                <Button Click="ButtonVerlauf_Click"
                        Grid.Column="3"
                        Padding="5,0">Verlauf</Button>
            </Grid>

            <HeaderedContentControl Grid.Column="1"
                                    Grid.RowSpan="2"
                                    Header="Inventar">
                <ListBox x:Name="ListBoxInventar"
                         MinHeight="30"
                         VerticalAlignment="Stretch">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </HeaderedContentControl>
        </Grid>
    </Grid>
</Window>
